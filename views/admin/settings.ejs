<% title = 'Admin â€” Settings' %>

<div class="bg-white rounded shadow p-4 max-w-7xl mx-auto">
  <div class="flex items-center justify-between mb-4">
    <h2 class="text-xl font-bold">Settings</h2>
  </div>

  <form action="/admin/settings" method="post" class="space-y-4">
    <div>
      <label class="block text-sm font-medium text-gray-700">Site name</label>
      <input name="web.name" value="<%= (config && config.web && config.web.name) ? config.web.name : '' %>" class="mt-1 block w-full rounded border p-2" />
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700">Favicon / Logo URL</label>
      <input name="web.favicon" value="<%= (config && config.web && config.web.favicon) ? config.web.favicon : '' %>" class="mt-1 block w-full rounded border p-2" placeholder="https://example.com/favicon.png" />
      <p class="text-xs text-gray-500 mt-1">Provide a full URL to an image to use as the site favicon (shown in browser tab).</p>
      <% if (config && config.web && config.web.favicon) { %>
        <div class="mt-2">
          <img src="<%= config.web.favicon %>" alt="favicon preview" class="w-12 h-12 rounded" />
        </div>
      <% } %>
    </div>

    <div>
      <button type="submit" class="px-4 py-2 bg-primary-600 text-white rounded">Save Settings</button>
    </div>
  </form>
</div>
