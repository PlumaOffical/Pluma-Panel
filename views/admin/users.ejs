<% title = 'Admin â€” Users' %>

<div class="bg-white rounded-md shadow p-4">
  <div class="flex items-center justify-between mb-4">
    <h2 class="text-xl font-bold">Users</h2>
    <a href="/admin/users/archived" class="px-3 py-1 bg-gray-200 rounded">Show Archived</a>
  </div>

  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead>
        <tr class="text-left">
          <th class="px-3 py-2">ID</th>
          <th class="px-3 py-2">Username</th>
          <th class="px-3 py-2">Created</th>
          <th class="px-3 py-2">Deleted At</th>
          <th class="px-3 py-2">Balance</th>
          <th class="px-3 py-2">Admin</th>
          <th class="px-3 py-2">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-100">
        <% if (users && users.length) { %>
          <% users.forEach(u => { %>
            <tr>
              <td class="px-3 py-2"><%= u.id %></td>
              <td class="px-3 py-2"><%= u.username %></td>
              <td class="px-3 py-2"><%= u.created_at ? new Date(u.created_at).toLocaleString() : '-' %></td>
              <td class="px-3 py-2"><%= u.deleted_at ? new Date(u.deleted_at).toLocaleString() : '-' %></td>
              <td id="balance-<%= u.id %>" class="px-3 py-2"><%= (u.balance || 0).toFixed ? (u.balance || 0).toFixed(2) : (u.balance || 0) %></td>
              <td class="px-3 py-2">
                <% if (u.is_admin) { %>
                  <span class="px-2 py-1 bg-yellow-100 text-yellow-800 rounded text-sm">Admin</span>
                <% } else { %>
                  <span class="px-2 py-1 bg-gray-100 text-gray-700 rounded text-sm">User</span>
                <% } %>
              </td>
              <td class="px-3 py-2 space-x-1">
                <!-- coin controls available for all accounts -->
                <button data-user-id="<%= u.id %>" data-action="add" class="coin-btn px-2 py-1 bg-blue-600 text-white rounded text-sm">Add Coins</button>
                <button data-user-id="<%= u.id %>" data-action="remove" class="coin-btn px-2 py-1 bg-indigo-600 text-white rounded text-sm">Remove Coins</button>

                <% if (!u.is_admin) { %>
                  <form action="/admin/users/<%= u.id %>/make-admin" method="post" class="inline">
                    <button class="px-2 py-1 bg-green-600 text-white rounded text-sm">Make Admin</button>
                  </form>
                <% } else { %>
                  <% if (user && user.id === u.id) { %>
                    <!-- cannot unadmin yourself -->
                    <button disabled class="px-2 py-1 bg-gray-300 text-gray-600 rounded text-sm" title="You cannot remove your own admin rights">Unadmin</button>
                  <% } else { %>
                    <form action="/admin/users/<%= u.id %>/unadmin" method="post" class="inline">
                      <button class="px-2 py-1 bg-gray-600 text-white rounded text-sm">Unadmin</button>
                    </form>
                  <% } %>
                <% } %>

                <% if (!u.is_admin) { %>
                  <form action="/admin/users/<%= u.id %>/delete" method="post" class="inline" onsubmit="return confirm('Delete user <%= u.username %>?');">
                    <button class="px-2 py-1 bg-red-600 text-white rounded text-sm">Delete</button>
                  </form>
                <% } else { %>
                  <button disabled class="px-2 py-1 bg-gray-300 text-gray-600 rounded text-sm" title="Admin accounts cannot be deleted">Delete</button>
                <% } %>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="7" class="px-3 py-6 text-center text-gray-500">No users found</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <!-- pagination -->
  <div class="mt-4 flex items-center justify-between">
    <div class="text-sm text-gray-600">Page <%= page %> of <%= totalPages %></div>
    <div class="flex gap-2">
      <% if (page > 1) { %>
        <a href="?page=<%= page - 1 %>" class="px-3 py-1 bg-gray-200 rounded">Prev</a>
      <% } %>
      <% for (let p = 1; p <= totalPages; p++) { %>
        <a href="?page=<%= p %>" class="px-3 py-1 <%= p === page ? 'bg-primary-600 text-white' : 'bg-gray-100' %> rounded"><%= p %></a>
      <% } %>
      <% if (page < totalPages) { %>
        <a href="?page=<%= page + 1 %>" class="px-3 py-1 bg-gray-200 rounded">Next</a>
      <% } %>
    </div>
  </div>
</div>
<script>
  async function adjustCoins(id, action) {
    try {
      const raw = prompt(action === 'add' ? 'Amount to add:' : 'Amount to remove:');
      if (!raw) return;
      const amount = parseFloat(raw);
      if (isNaN(amount) || amount <= 0) return alert('Please enter a positive number');

      const res = await fetch('/admin/users/' + id + '/coins', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ amount, action })
      });

      if (!res.ok) {
        const txt = await res.text();
        return alert('Error: ' + txt);
      }

      const data = await res.json();
      if (data && data.ok) {
        const el = document.getElementById('balance-' + id);
        if (el) {
          // show two decimals
          const v = (Math.round((data.newBalance || 0) * 100) / 100).toFixed(2);
          el.textContent = v;
        }
      } else {
        alert('Unexpected response');
      }
    } catch (err) {
      console.error(err);
      alert('Error adjusting coins');
    }
  }
  // wire up buttons that use data attributes
  document.addEventListener('DOMContentLoaded', function () {
    document.querySelectorAll('.coin-btn').forEach(function (btn) {
      btn.addEventListener('click', function (e) {
        const id = btn.dataset.userId;
        const action = btn.dataset.action;
        adjustCoins(id, action);
      });
    });
  });
</script>