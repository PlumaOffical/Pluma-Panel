<% title = 'Archived Users' %>

<div class="bg-white rounded-md shadow p-4">
  <div class="flex items-center justify-between mb-4">
    <h2 class="text-xl font-bold">Archived Users</h2>
    <a href="/admin/users" class="px-3 py-1 bg-gray-200 rounded">Back to Users</a>
  </div>
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead>
        <tr class="text-left">
          <th class="px-3 py-2">Original ID</th>
          <th class="px-3 py-2">Username</th>
          <th class="px-3 py-2">Created</th>
          <th class="px-3 py-2">Deleted At</th>
          <th class="px-3 py-2">Balance</th>
          <th class="px-3 py-2">Admin</th>
          <th class="px-3 py-2">Deleted By (ID)</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-100">
        <% if (archived && archived.length) { %>
          <% archived.forEach(a => { %>
            <tr>
              <td class="px-3 py-2"><%= a.original_id %></td>
              <td class="px-3 py-2"><%= a.username %></td>
              <td class="px-3 py-2"><%= a.created_at ? new Date(a.created_at).toLocaleString() : '-' %></td>
              <td class="px-3 py-2"><%= a.deleted_at ? new Date(a.deleted_at).toLocaleString() : '-' %></td>
              <td class="px-3 py-2"><%= (a.balance || 0).toFixed ? (a.balance || 0).toFixed(2) : (a.balance || 0) %></td>
              <td class="px-3 py-2"><%= a.is_admin ? 'Yes' : 'No' %></td>
              <td class="px-3 py-2"><%= a.deleted_by || '-' %></td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="7" class="px-3 py-6 text-center text-gray-500">No archived users</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>