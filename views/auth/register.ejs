<% title = 'Register' %>

<div class="w-full max-w-md p-6 bg-white dark:bg-gray-800 rounded shadow mx-auto">
  <h2 class="text-xl font-bold mb-4">Register</h2>
  <% if (typeof error !== 'undefined' && error) { %>
    <div class="mb-3 text-red-600"><%= error %></div>
  <% } %>
  <form action="/auth/register" method="post" class="space-y-4">
    <input name="username" placeholder="Username" class="w-full p-2 border rounded" />
    <input name="password" type="password" placeholder="Password" class="w-full p-2 border rounded" />
    <button class="w-full py-2 bg-primary-600 text-white rounded">Register</button>
  </form>
  <p class="mt-3 text-sm">Already have an account? <a href="/auth/login" class="text-primary-500">Login</a></p>
</div>