<% title = 'Register' %>

<section class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="w-full max-w-md p-6 bg-white rounded shadow">
    <h2 class="text-xl font-bold mb-4">Register</h2>
    <% if (typeof error !== 'undefined' && error) { %>
      <div class="mb-3 text-red-600"><%= error %></div>
    <% } %>
    <form action="/auth/register" method="post" class="space-y-4">
      <input name="username" placeholder="Username" class="w-full p-2 border rounded" required />
      <input name="email" type="email" placeholder="Email" class="w-full p-2 border rounded" required />
      <input name="password" type="password" placeholder="Password" class="w-full p-2 border rounded" required />
      <button class="w-full py-2 bg-primary-600 text-white rounded">Register</button>
    </form>
    <p class="mt-3 text-sm text-center">
      Already have an account? <a href="/auth/login" class="text-primary-500">Login</a>
    </p>
  </div>
</section>
