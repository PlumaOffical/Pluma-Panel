<div class="max-w-7xl mx-auto py-6">
  <h1 class="text-2xl font-bold mb-4">Your Services</h1>

  <div class="space-y-4">
    <% if (orders && orders.length) { %>
      <% orders.forEach(function(o){ %>
        <div class="bg-white p-4 rounded shadow">
          <div class="flex justify-between items-start">
            <div>
              <h3 class="font-semibold text-lg"><%= o.plan_name || ('Plan #' + o.plan_id) %></h3>
              <p class="text-sm text-gray-600">Server: <strong><%= o.server_name %></strong></p>
              <p class="text-sm text-gray-500">Ordered: <%= o.created_at %></p>
            </div>
            <div class="text-right">
              <p class="text-sm">Status: <span class="font-medium"><%= o.status %></span></p>
              <p class="text-sm">Price: $<%= (o.price||0).toFixed(2) %></p>
            </div>
          </div>

          <% if (o.ptero_server_id) { %>
            <div class="mt-3 text-sm">
              <p>Pterodactyl server id: <code><%= o.ptero_server_id %></code></p>
              <% if (o.ptero_response) { %>
                <details class="mt-2">
                  <summary class="cursor-pointer text-sm text-primary-600">Response details</summary>
                  <pre class="p-2 bg-gray-50 rounded text-xs overflow-auto"><%= o.ptero_response %></pre>
                </details>
              <% } %>
            </div>
          <% } else if (o.ptero_response) { %>
            <div class="mt-3 text-sm text-yellow-700">
              <p>Provisioning info:</p>
              <pre class="p-2 bg-yellow-50 rounded text-xs overflow-auto"><%= o.ptero_response %></pre>
            </div>
          <% } %>
        </div>
      <% }); %>
    <% } else { %>
      <p>You have no services or orders yet. Visit the <a href="/store" class="text-primary-600">store</a> to order a server.</p>
    <% } %>
  </div>
</div>
