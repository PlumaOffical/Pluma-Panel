<div class="max-w-7xl mx-auto py-6">
  <h1 class="text-2xl font-bold mb-4">Store</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <% if (plans && plans.length) { %>
      <% plans.forEach(function(plan){ %>
        <div class="bg-white p-4 rounded shadow">
          <h3 class="font-semibold text-lg"><%= plan.name %></h3>
          <p class="text-sm text-gray-600">Price: $<%= (plan.price||0).toFixed(2) %> â€” <%= plan.billing_cycle %></p>
          <ul class="text-sm mt-2">
            <li>RAM: <%= plan.ram %> MB</li>
            <li>Disk: <%= plan.disk %> MB</li>
            <li>CPU: <%= plan.cpu %></li>
            <li>Egg: <%= plan.egg %></li>
            <li>Nest: <%= plan.nest %></li>
          </ul>
          <div class="mt-3">
            <a href="/store/checkout/<%= plan.id %>" class="px-3 py-2 bg-primary-500 text-white rounded">Order</a>
          </div>
        </div>
      <% }); %>
    <% } else { %>
      <p>No plans available.</p>
    <% } %>
  </div>
</div>
