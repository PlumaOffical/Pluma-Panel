<% title = 'Store' %>

<div class="max-w-7xl mx-auto">
  <h1 class="text-2xl font-bold mb-6">Store</h1>
  <% if (plans && plans.length) { %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% plans.forEach(function(plan){ %>
        <div class="bg-white p-6 rounded-2xl shadow hover:shadow-lg transition-all duration-200 flex flex-col justify-between">
          <div>
            <div class="flex items-center justify-between mb-3">
              <h3 class="text-xl font-semibold text-gray-900"><%= plan.name %></h3>
              <span class="text-sm text-gray-500 bg-gray-100 px-3 py-1 rounded-full"><%= plan.billing_cycle %></span>
            </div>
            <p class="text-2xl font-bold text-primary-600 mb-4">$<%= (plan.price || 0).toFixed(2) %></p>

            <ul class="space-y-1 text-sm text-gray-700">
              <li><span class="font-medium">RAM:</span> <%= plan.ram %> MB</li>
              <li><span class="font-medium">Disk:</span> <%= plan.disk %> MB</li>
              <li><span class="font-medium">CPU:</span> <%= plan.cpu %></li>
            </ul>
          </div>
          <div class="mt-6">
            <a href="/store/checkout/<%= plan.id %>"
              class="block w-full text-center bg-primary-600 hover:bg-primary-700 text-white font-medium py-2.5 rounded transition">
              Order Now
            </a>
          </div>
        </div>
      <% }); %>
    </div>
  <% } else { %>
    <p class="text-gray-600">No plans available.</p>
  <% } %>
</div>
